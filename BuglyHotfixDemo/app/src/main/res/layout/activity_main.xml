<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.tencent.bugly.hotfix.MainActivity">

    <TextView
            android:text="当前版本:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvCurrentVersion"/>

    <Button
            android:id="@+id/btnShowToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/showToast"
            android:layout_below="@+id/tvCurrentVersion"
            android:layout_marginTop="14dp"/>

    <Button
            android:id="@+id/btnLoadPatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/loadPatch"
            android:layout_below="@+id/btnShowToast"
    />
    <Button
            android:id="@+id/btnKillSelf"
            android:text="退出程序"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/btnLoadPatch"
            android:layout_alignLeft="@+id/btnLoadPatch"
            android:layout_alignStart="@+id/btnLoadPatch"/>

</RelativeLayout>
